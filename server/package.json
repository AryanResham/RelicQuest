{
  "name": "ecommerce-server",
  "version": "1.0.0",
  "description": "Backend server for RelicQuest e-commerce application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "node ./dist/index.js",
    "dev": "concurrently \"tsc -w\" \"nodemon ./dist/index.js\"",
    "dev:ts": "ts-node-esm src/index.ts",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "ecommerce",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "Aryan",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.7.8",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2"
  }
}
